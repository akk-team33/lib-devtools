<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.team33.devtools</groupId>
        <artifactId>devtools-root</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>devtools-home</artifactId>
    <packaging>jar</packaging>

    <name>Team33 Development Tools Library Home</name>
    <description>Team33 Development Tools library collection - documents home</description>

    <properties>
        <skipHome>true</skipHome>
        <skipDeploy>true</skipDeploy>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>${basedir}/../target/home-collected</directory>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
</project>
